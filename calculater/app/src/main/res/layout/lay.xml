<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    android:paddingLeft="7dp"
    android:paddingTop="30dp">

    <TableRow>

        <EditText

            android:layout_width="match_parent"
            android:layout_height="95dp"
            android:layout_span="4"
            android:background="#000"
            android:text="1235234"
            android:textColor="#fff"
            android:textSize="40dp" />
    </TableRow>

    <TableRow android:paddingTop="35dp">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_span="3"
            android:padding="10dp"
            android:text="@string/casio"
            android:textColor="#fff"
            android:textSize="20dp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_span="1"
            android:padding="10dp"
            android:text="@string/delete"
            android:textColor="#FFF"
            android:textSize="20dp"
            android:textAllCaps="true"
            />
    </TableRow>

    <TableRow android:paddingTop="10dp">

        <Button
            android:id="@+id/btn7"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:background="@color/press1"
            android:padding="25dp"
            android:text="7"
            android:textColor="#FFF"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btn8"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:background="@color/press1"
            android:padding="25dp"
            android:text="8"
            android:textColor="#FFF"
            android:textSize="20dp"

            />

        <Button
            android:id="@+id/btn9"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:background="@color/press1"
            android:padding="25dp"
            android:text="9"
            android:textColor="#FFF"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btnchia"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:background="@color/press2"
            android:padding="25dp"
            android:text="/"
            android:textColor="#FFF"
            android:textSize="20dp" />
    </TableRow>

    <TableRow>

        <Button
            android:id="@+id/btn4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:background="@color/press1"
            android:padding="25dp"
            android:text="4"
            android:textColor="#FFF"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btn5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:background="#474747"
            android:padding="25dp"
            android:text="5"
            android:textColor="#FFF"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btn6"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:background="#474747"
            android:padding="25dp"
            android:text="6"
            android:textColor="#FFF"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btnnhan"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:background="#222222"
            android:padding="25dp"
            android:text="x"
            android:textColor="#FFF"
            android:textSize="20dp" />
    </TableRow>

    <TableRow>

        <Button
            android:id="@+id/btn1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:background="#474747"
            android:padding="25dp"
            android:text="1"
            android:textColor="#FFF"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btn2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:background="#474747"
            android:padding="25dp"
            android:text="2"
            android:textColor="#FFF"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btn3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:background="#474747"
            android:padding="25dp"
            android:text="3"
            android:textColor="#FFF"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btntru"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:background="#222222"
            android:padding="25dp"
            android:text="-"
            android:textColor="#FFF"
            android:textSize="20dp" />
    </TableRow>

    <TableRow>

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:background="#474747"
            android:padding="25dp"
            android:text="."
            android:textColor="#FFF"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btn0"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:background="#474747"
            android:padding="25dp"
            android:text="0"
            android:textColor="#FFF"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btnbang"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:background="#222222"
            android:padding="25dp"
            android:text="="
            android:textColor="#FFF"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btncong"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:background="#222222"
            android:padding="30dp"
            android:text="+"
            android:textColor="#FFF"
            android:textSize="20dp" />
    </TableRow>

</TableLayout>